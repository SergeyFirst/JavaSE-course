<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.company.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Desktop</servlet-name>
        <servlet-class>com.company.servlets.Desktop</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserList</servlet-name>
        <servlet-class>com.company.servlets.UserList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>com.company.servlets.EditUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveUser</servlet-name>
        <servlet-class>com.company.servlets.SaveUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>com.company.servlets.DeleteUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GoodsList</servlet-name>
        <servlet-class>com.company.servlets.GoodsList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditGoods</servlet-name>
        <servlet-class>com.company.servlets.EditGoods</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveGoods</servlet-name>
        <servlet-class>com.company.servlets.SaveGoods</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteGoods</servlet-name>
        <servlet-class>com.company.servlets.DeleteGoods</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Report</servlet-name>
        <servlet-class>com.company.servlets.Report</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Desktop</servlet-name>
        <url-pattern>/app/desktop</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserList</servlet-name>
        <url-pattern>/app/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/app/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveUser</servlet-name>
        <url-pattern>/app/saveUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/app/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GoodsList</servlet-name>
        <url-pattern>/app/goods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditGoods</servlet-name>
        <url-pattern>/app/editGoods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveGoods</servlet-name>
        <url-pattern>/app/saveGoods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteGoods</servlet-name>
        <url-pattern>/app/deleteGoods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Report</servlet-name>
        <url-pattern>/app/report</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.company.servlets.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>

</web-app>